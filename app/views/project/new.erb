<% form_for @project, '/new' do |f| %>
  <% if @project.errors.any? -%>
    <%= error_messages_for :project %>
  <% end -%>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit 'create' %>
  </div>

<% end %>
