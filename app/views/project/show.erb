<span><%= link_to '×', "/#{@project.token}", confirm: '削除してよろしいですか？', method: :delete %></span>
<h1><%= @project.name %></h1>
<p><%= @project.description %></p>

<% form_for @new_task, "/#{@project.token}/tasks" do |f| %>
  <%= f.text_field :name %>
  <%= f.submit '今日やる', name: 'today' %>
  <%= f.submit '明日やる', name: 'tomorrow' %>
  <%= f.submit 'いつかやる', name: 'someday' %>
<% end %>

<% {today: @today_tasks, tomorrow: @tomorrow_tasks, someday: @someday_tasks}.each do |type, tasks| -%>
  <div id="<%= type %>">
    <h2><%= {today: '今日やる', tomorrow: '明日やる', someday: 'いつかやる'}[type] %></h2>
    <% tasks.each do | task | -%>
      <% form_for task, "/#{@project.token}/tasks/#{task.id}", method: :put do |f| %>
        <% if type == :today -%>
          <%= f.check_box :done %>
        <% end -%>
        <%= task.name %><%= '[ 期限過ぎちゃいました ]' if type == :someday && task.due_date.present? %>
        <%= link_to '×', "/#{@project.token}/tasks/#{task.id}",
                        confirm: '削除してよろしいですか？', method: :delete %>

        <% unless type == :today -%><%= f.submit 'move today', name: 'today' %><% end -%>
        <% unless type == :tomorrow -%><%= f.submit 'move tomorrow', name: 'tomorrow' %><% end -%>
        <% unless type == :someday -%><%= f.submit 'move someday', name: 'someday' %><% end -%>
      <% end %>
    <% end -%>
  </div>
<% end -%>
